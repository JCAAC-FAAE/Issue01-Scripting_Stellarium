function getDateHM() {
return core
  .getDate('local')
  .replace('T', ' ')
  .slice(0, -3);
}

function display_event(i) {
  core.setJDay(jd[i]);
  LabelMgr.setLabelText(lbl, getDateHM());
  core.wait(0.1);
}

const prefix = 'triple_galilean_';
for (var i = 0; i < jd.length; i++) {
  display_event(i);
  core.screenshot(prefix);
}

